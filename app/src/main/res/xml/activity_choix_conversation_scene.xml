<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="1000">
       <KeyFrameSet>
       </KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:layout_height="515dp"
            android:layout_width="345dp"
            android:id="@+id/textViewMsg"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintVertical_bias="0.0"
            motion:layout_constraintBottom_toTopOf="@+id/textMsg"
            motion:layout_constraintTop_toBottomOf="@id/spinConversations"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="30dp"
            motion:layout_constraintHorizontal_bias="0.0" />
        <Constraint
            android:layout_height="34dp"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="55dp"
            android:id="@+id/btnChoixConv"
            motion:layout_constraintStart_toEndOf="@+id/spinConversations"
            motion:layout_constraintHorizontal_bias="0.605"
            motion:layout_constraintBottom_toBottomOf="@+id/spinConversations"
            motion:layout_constraintVertical_bias="0.842"
            motion:layout_constraintTop_toTopOf="@+id/spinConversations"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="1dp" />
        <Constraint
            android:layout_height="43dp"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_width="239dp"
            motion:layout_constraintTop_toBottomOf="@+id/textView"
            android:id="@+id/spinConversations"
            motion:layout_constraintEnd_toStartOf="@+id/btnChoixConv"
            android:layout_marginTop="16dp"
            motion:layout_constraintHorizontal_bias="1.0"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="8dp"
            motion:layout_editor_absoluteX="75dp" />
        <Constraint
            android:layout_height="65dp"
            android:layout_width="304dp"
            android:id="@+id/textMsg"
            motion:layout_constraintEnd_toStartOf="@+id/imageButton"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="16dp"
            motion:layout_editor_absoluteX="14dp"
            motion:layout_editor_absoluteY="658dp"
            android:layout_marginBottom="8dp" />
        <Constraint
            android:layout_height="65dp"
            android:layout_width="63dp"
            android:id="@+id/imageButton"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintTop_toTopOf="@+id/textMsg"
            android:layout_marginTop="0dp"
            motion:layout_constraintStart_toEndOf="@+id/textMsg"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="7dp"
            motion:layout_constraintHorizontal_bias="0.0"
            motion:layout_constraintVertical_bias="0.0"
            motion:layout_constraintBottom_toBottomOf="@+id/textMsg"
            android:layout_marginBottom="0dp"
            android:layout_marginEnd="8dp" />
        <Constraint
            android:id="@+id/barrier"
            android:layout_height="0dp" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            motion:layout_editor_absoluteY="660dp"
            android:layout_height="55dp"
            motion:layout_editor_absoluteX="27dp"
            android:layout_width="310dp"
            android:id="@+id/textMsg" />
        <Constraint
            android:layout_height="41dp"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintHorizontal_bias="0.152"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="306dp"
            motion:layout_constraintTop_toBottomOf="@+id/textView"
            android:id="@+id/spinConversations" />
        <Constraint
            android:layout_height="42dp"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="80dp"
            android:id="@+id/btnChoixConv"
            motion:layout_constraintTop_toTopOf="@+id/spinConversations"
            android:layout_marginTop="40dp"
            motion:layout_constraintStart_toEndOf="@+id/spinConversations"
            android:layout_marginStart="2dp"
            android:layout_marginLeft="2dp"
            motion:layout_constraintHorizontal_bias="1.0"
            motion:layout_constraintBottom_toBottomOf="@+id/spinConversations"
            motion:layout_constraintVertical_bias="1.0"
            motion:layout_editor_absoluteY="32dp" />
        <Constraint
            motion:layout_editor_absoluteY="86dp"
            android:layout_height="559dp"
            motion:layout_editor_absoluteX="34dp"
            android:layout_width="343dp"
            android:id="@+id/textViewMsg" />
    </ConstraintSet>
</MotionScene>